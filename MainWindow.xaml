<Window x:Class="MCBE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCBE"
        mc:Ignorable="d"
        Title="MainWindow" MinWidth="625" MinHeight="440" Width="625" Height="440">
    <Grid Margin="0,0,0,0" MinWidth="625" MinHeight="440" HorizontalAlignment="Center" VerticalAlignment="Center" Width="623">
        <TextBox x:Name="entrada" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" MinWidth="250" MinHeight="400" AcceptsReturn="True"/>
        <TextBox x:Name="salida" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" MinWidth="250" MinHeight="400" Margin="0,0,10,0" AcceptsReturn="True"/>
        <Button Content="RUN MCBE" HorizontalAlignment="Center" VerticalAlignment="Top" Height="33" Width="76" Click="Button_Click" Margin="0,33,0,0"/>
        <Button Content="DecToBin" HorizontalAlignment="Center" VerticalAlignment="Top" Height="33" Width="76" Click="Button_DecToBin_Click" Margin="0,71,0,0"/>
        <Button Content="BinToDec" HorizontalAlignment="Center" VerticalAlignment="Top" Height="33" Width="76" Click="Button_BinToDec_Click" Margin="0,109,0,0"/>

    </Grid>
</Window>
